<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.SearchPlayerbyCountryClubController">
   <children>
      <AnchorPane prefHeight="410.0" prefWidth="610.0" style="-fx-background-color: #450e3a;">
         <children>
            <Label layoutX="87.0" layoutY="138.0" prefHeight="42.0" prefWidth="350.0" text="Enter Name of Country :">
               <font>
                  <Font name="Comic Sans MS" size="30.0" />
               </font>
               <textFill>
                  <LinearGradient endX="1.0" endY="1.0">
                     <stops>
                        <Stop color="#eb8e8e" />
                        <Stop color="#45c481" offset="1.0" />
                     </stops>
                  </LinearGradient>
               </textFill>
            </Label>
            <TextField fx:id="countryTextfield" layoutX="87.0" layoutY="199.0" onKeyTyped="#keyTypeAction1" opacity="0.52" prefHeight="37.0" prefWidth="455.0">
               <font>
                  <Font name="Comic Sans MS" size="18.0" />
               </font>
            </TextField>
            <Button fx:id="searchButton" layoutX="490.0" layoutY="255.0" mnemonicParsing="false" onAction="#searchButtonAction" style="-fx-background-color: #47c1c9;" text="Search" />
            <Button fx:id="resetButton" layoutX="490.0" layoutY="290.0" mnemonicParsing="false" onAction="#resetButtonAction" prefHeight="25.0" prefWidth="52.0" style="-fx-background-color: #47c1c9;" text="Reset" />
