            <Button fx:id="backButton" layoutX="341.0" layoutY="361.0" mnemonicParsing="false" onAction="#backButtonAction" prefHeight="25.0" prefWidth="201.0" style="-fx-background-color: #47c1c9;" text="Return to Main Menu" />
            <Label fx:id="notFound" layoutX="87.0" layoutY="267.0" prefHeight="46.0" prefWidth="375.0" textFill="#c81414">
               <font>
                  <Font name="Comic Sans MS" size="15.0" />
               </font>
            </Label>
         </children>
      </AnchorPane>
      <Label fx:id="Welcome" layoutX="85.0" layoutY="28.0" prefHeight="74.0" prefWidth="455.0" textFill="#1969e8">
         <font>
            <Font name="Comic Sans MS" size="28.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
