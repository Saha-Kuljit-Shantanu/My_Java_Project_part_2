            <Font name="Comic Sans MS" size="16.0" />
         </font>
      </TextField>
      <Label fx:id="sameNumberLabel" layoutX="122.0" layoutY="220.0" prefHeight="20.0" prefWidth="321.0" textFill="#e80000">
