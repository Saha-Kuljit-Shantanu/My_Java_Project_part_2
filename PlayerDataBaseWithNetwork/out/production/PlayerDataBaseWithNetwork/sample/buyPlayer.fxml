   <children>
      <Label layoutX="177.0" layoutY="106.0" prefHeight="28.0" prefWidth="235.0" text="List Of Buyable Players" textFill="#1969e8">
         <font>
            <Font name="Comic Sans MS" size="20.0" />
         </font>
      </Label>
      <ListView fx:id="BuyableList" layoutX="47.0" layoutY="151.0" onMouseClicked="#mouseClickAction" prefHeight="148.0" prefWidth="495.0" />
