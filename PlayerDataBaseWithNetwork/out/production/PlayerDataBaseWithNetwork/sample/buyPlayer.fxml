      <Label fx:id="errorLabel" layoutX="47.0" layoutY="313.0" prefHeight="25.0" prefWidth="495.0" textFill="#e80000">
         <font>
            <Font name="Comic Sans MS" size="16.0" />
         </font></Label>
      <Label fx:id="Welcome" layoutX="50.0" layoutY="14.0" prefHeight="74.0" prefWidth="495.0" textFill="#1969e8">
         <font>
            <Font name="Comic Sans MS" size="28.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
